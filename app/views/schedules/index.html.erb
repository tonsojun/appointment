<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table class='table'>
  <thead>
    <tr>
      <th>User</th>
      <th>Meeting</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.user.profile.first_name %></td>
        <td><%= schedule.meeting_id %></td>
        <td><%= schedule.room_id %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>
